.hot {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.hot-title {
  font-weight: bold;
}

.hot-content{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.hot-every {
  margin-top: 25rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  background-color: #e6e6e6;
  border-radius: 20rpx;
  padding: 5rpx 24rpx;
  margin-right: 30rpx;
  font-size: 24rpx;
}

.history {
