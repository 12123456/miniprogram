@charset "UTF-8";
.tab-content {
  height: calc(100vh - 100rpx);
  background-color: #f0f0f0;
}

/* 缺省页 */
.nothing {
  padding: 203rpx 30rpx 0;
  box-sizing: border-box;
}

.nothing .nothing-Img {
  margin: 0 auto;
  width: 439rpx;
  height: 218rpx;
}

.nothing .nothing-Img image {
  width: 100%;
  height: 100%;
}

.nothing .nothing-title {
  margin-top: 62rpx;
  font-size: 32rpx;
  color: rgba(33, 33, 33, 0.5);
  text-align: center;
  font-family: PingFang SC;
  font-weight: 500;
}

.nothing .toShopping {
  margin-top: 120rpx;
  line-height: 88rpx;
  text-align: center;
  height: 88rpx;
  background: linear-gradient(90deg, #FE7B64 0%, #FD4946 100%);
  border-radius: 44rpx;
  font-size: 43rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

/* 缺省页end */
.content-scroll {
  height: 100%;
}

.content-scroll .every-content {
  font-size: 28rpx;
  margin: 28rpx auto 0 auto;
  background-color: #fff;
  padding: 36rpx 28rpx 22rpx;
  box-sizing: border-box;
}

.content-scroll .every-content .content-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content-scroll .every-content .content-top .top-left {
  display: flex;
  align-items: center;
}

.content-scroll .every-content .content-top .top-left image {
  width: 50rpx;
  height: 50rpx;
}

.content-scroll .every-content .content-top .top-left .top-left-title {
  margin-left: 14rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #0A0A0B;
  padding-right: 25rpx;
  box-sizing: border-box;
  position: relative;
}

.content-scroll .every-content .content-top .top-left .top-left-title::after {
  position: absolute;
  top: 50%;
  right: 0;
  content: ' ';
  width: 13rpx;
  height: 22rpx;
  transform: translateY(-50%);
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAkAAAAOCAQAAABXnf4jAAAAAXNSR0IArs4c6QAAAHRJREFUGBkFwS0SQQEABsBNfucNV6EQKBQSifxuZNyFQqEQuApjGIPy2YWVBQBQiq8ZAFRtxccEAOr24m0EAE1H8TQAgMJZPPQAoO0qbjoAtFzEXRegcBIPfYCGg3gZAtTsxNsYoGIjPqYAlOJnDgCsLQHgDzkTJPRjJR71AAAAAElFTkSuQmCC") no-repeat;
  background-size: 13rpx 22rpx;
}

.content-scroll .every-content .content-top .top-right {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FD5C51;
}

.content-scroll .every-content .content-middle {
  margin-top: 40rpx;
  display: flex;
}

.content-scroll .every-content .content-middle image {
  width: 160rpx;
  height: 160rpx;
}

.content-scroll .every-content .content-middle .middle-right {
  margin-left: 20rpx;
  height: 160rpx;
  padding-top: 19rpx;
  box-sizing: border-box;
  width: calc(100% - 180rpx);
}

.content-scroll .every-content .content-middle .middle-right .middle-right-title {
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #212121;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.content-scroll .every-content .content-middle .middle-right .middle-right-dec {
  margin-top: 23rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #212121;
}

.content-scroll .every-content .all-price {
  margin-top: 32rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  color: #FD5C51;
  font-size: 32rpx;
  font-weight: 500;
}

.content-scroll .every-content .all-price text {
  font-size: 24rpx;
}

.content-scroll .every-content .content-bottom {
  margin-top: 50rpx;
  display: flex;
  justify-content: flex-end;
}

.content-scroll .every-content .content-bottom view {
  padding: 18rpx 20rpx;
  box-sizing: border-box;
  background: #EDEDED;
  border-radius: 28rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  margin-left: 24rpx;
}

.content-scroll .every-content .content-bottom .last-btn {
  color: #108ee9;
}

.content-scroll .every-content .content-bottom .link-btn {
  background: #FD5C51;
  color: #FFFFFF;
}

.goods-num {
  height: 100%;
  display: table-cell;
  /*按照单元格的样式显示元素*/
  vertical-align: bottom;
  /*底对齐*/
}
